@model EditUserModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit User</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName">
                        <span class="form-control-feedback text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                        <span class="form-control-feedback text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Save
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Administration" asp-action="ListUsers" type="button" class="btn btn-danger btn-block btn-rounded">
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <a class="btn btn-success my-3" asp-action="EditRolesInUser" asp-route-userId="@Model.Id">Manage Roles</a>
</div>
<div class="row">

    
                @if (Model.Roles.Any())
                {

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Role Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                        <tr>
                            <td>@role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
                }
                else
                {
                    <h5>This user has no role</h5>
                }
            
</div>



