@model EditProfileModel

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profile</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="FullName"></label>
                        <input class="form-control" asp-for="FullName">
                        <span class="form-control-feedback text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                        <span class="form-control-feedback text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    
                    @if (Model.Address != null)
                    {
                        <div class="form-group mb-3">
                            <label class="form-control-label" asp-for="Address"></label>
                            <input class="form-control" asp-for="Address">
                            <span class="form-control-feedback text-danger" asp-validation-for="Address"></span>
                        </div>
                    }
                    @if (Model.DayOfBirth != null)
                    {
                        <div class="form-group mb-3">
                            <label class="form-control-label" asp-for="DayOfBirth"></label>
                            <input class="form-control" asp-for="DayOfBirth">
                            <span class="form-control-feedback text-danger" asp-validation-for="DayOfBirth"></span>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Sign up
                            </button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div>Already have an account? <a asp-action="Login" class="text-success">Sign in</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
