@model CreateMedicineModel


@{
    ViewData["Title"] = "Create New Medicine";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Medicine</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <div class="form-group mb-3" style="display:none">
                        <label class="form-control-label" asp-for="Id">@ViewData["id"]</label>
                        <input class="form-control" asp-for="Id">
                        <span class="form-control-feedback text-danger" asp-validation-for="Id"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span class="form-control-feedback text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Prescription"></label>
                        <input class="form-control" asp-for="Prescription">
                        <span class="form-control-feedback text-danger" asp-validation-for="Prescription"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Save
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Medicine" asp-action="Index" type="button" class="btn btn-danger btn-block btn-rounded">
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>